{
  "name": "courier",
  "description": "A GUI tool for interacting with Azure Service Bus.",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Oscar Paramo",
    "email": "oscar@paramo.dev",
    "url": "https://www.oscarparamo.com"
  },
  "dependencies": {
    "@azure/service-bus": "1.0.3",
    "@material-ui/core": "4.2.1",
    "@material-ui/icons": "4.2.1",
    "azure": "2.3.1-preview",
    "bluebird": "3.5.5",
    "dotenv": "8.0.0",
    "electron-is-dev": "1.1.0",
    "lodash": "4.17.15",
    "node-ipc": "9.1.1",
    "react-dom": "16.8.6",
    "react-scripts": "3.0.1",
    "react": "16.8.6",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.11",
    "@rescripts/rescript-env": "0.0.10",
    "concurrently": "4.1.1",
    "electron": "5.0.8",
    "electron-builder": "21.1.5",
    "typescript": "3.5.3",
    "wait-on": "3.3.0"
  },
  "main": "public/electron.js",
  "scripts": {
    "build": "rescripts build",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder -l",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "start": "rescripts start",
    "test": "rescripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.oscarparamo.courier",
    "productName": "Courier",
    "copyright": "Copyright Â© 2019 Oscar Paramo",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "electron/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "homepage": "./"
}
